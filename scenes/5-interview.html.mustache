<!DOCTYPE html>
<html lang="en-US"">
  {{> head}}
  <body>
    <main class="main-scene gradient" role="main">
      <div class="positioned" style="left: 60px; top: 10px">
        <h1 class="project-name" style="padding: 10px">{{title}}</h1>
      </div>

      <div id="guest" class="area positioned" style="width: 760px; height: 480px; top:140px; left:70px">
        <div style="text-align: center; line-height: 480px; opacity: 0.8">Audio only</div>
      </div>
      <div id="cam" class="area positioned" style="bottom: 20px; right: 20px; width: 380px; height: 240px;"></div>

      <div class="positioned" style="left: 880px; height: 100%; right: 0">
        <div class="positioned fade-bottom" style="top: 20px; width: 100%; height: 400px; padding: 10px 20px">
          <p>{{summary}}</p>

          {{#schedule}}
            <h3>Schedule</h3>

            <ul class="schedule highlight-first">
              {{#upcoming}}
                <li>{{#time}}{{time}}: {{/time}}{{description}}</li>
              {{/upcoming}}
            </ul>
          {{/schedule}}
        </div>

      </div>
      {{#charity}}
        <div class="positioned" style="bottom: 10px; right: 440px; font-size: 20px; padding: 20px">
          <span class="dim">Today's charity:</span> {{name}} &mdash;
          <span class="dim">Donate at</dim> <a>{{donateLink}}</a>
        </div>
      {{/charity}}
    </main>
  </body>
</html>
